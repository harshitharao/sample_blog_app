<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @blog.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @blog.content %>
</p>

<% unless @blog.tags.blank? %>
    <table>
      <thead>
      <tr>
        <th>Tags:</th>
      </tr>
      </thead>

      <tbody>
      <% @blog.tags.each do |tag| %>
          <tr>
            <td><%= tag.name %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>

<%= link_to 'Edit', edit_blog_path(@blog) %> |
<%= link_to 'Back', blogs_path %>
